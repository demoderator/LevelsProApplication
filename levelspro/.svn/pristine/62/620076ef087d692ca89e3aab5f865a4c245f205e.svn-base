/* Tiny Scrollbar */
#scrollbar1 {   }
#scrollbar1 .viewport { width: 730px; height: 700px; overflow: hidden; position: relative; }
#scrollbar1 .pd-cont { width: 673px !important; height: 400px; overflow: hidden; position: relative; }
#scrollbar1 .overview { list-style: none; position: absolute; left: 0; top: 0; padding: 0; margin: 0; }
#scrollbar1 .forum-cont { width: 550px !important; height: 400px; overflow: hidden; position: relative; }
#scrollbar1 .qs-cont { width: 550px !important; height: 400px; overflow: hidden; position: relative; }
#scrollbar1 .lvl-exp { height: 542px; overflow: hidden; position: relative; }
#scrollbar1 .admin-prog { width:500px !important; height: 370px; overflow: hidden; position: relative; }
#scrollbar1 .progadmin { width:542px !important; height: 450px !important; overflow: hidden; position: relative; }

#scrollbar1 .edit-levels { width:542px !important; height: 350px !important; overflow: hidden; position: relative; }

#scrollbar1 .scrollbar{ background: transparent url(../images/bg-scrollbar-track-y.png) no-repeat 0 0; position: relative; background-position: 0 0; float: right; width: 19px; margin-right:10px; }
#scrollbar1 .viewport { width: 730px; height: 370px; overflow: hidden; position: relative; }
#scrollbar1 .track { background: transparent url(../images/bg-scrollbar-trackend-y.png) no-repeat 0 100%; height: 100%; width:19px; position: relative; padding: 0 1px; }
#scrollbar1 .thumb { background: transparent url(../images/bg-scrollbar-thumb.png) no-repeat 50% 100%; height: 52px ; width: 51px; cursor: pointer; overflow: hidden; position: absolute; top: 0; left: -17px; }
#scrollbar1 .thumb .end { background: transparent url(../images/bg-scrollbar-thumb-y.png) no-repeat 50% 0; overflow: hidden; height: 5px; width: 25px; display:none; }
#scrollbar1 .disable { display: none; }
.noSelect { user-select: none; -o-user-select: none; -moz-user-select: none; -khtml-user-select: none; -webkit-user-select: none; }


@media only screen 
and (max-width : 849px)
and (min-width : 321px) {

#scrollbar1 .viewport { width: 88% !important; height: 300px; overflow: hidden; position: relative; }
.qs-cont .viewport { height:400px !important;}

}